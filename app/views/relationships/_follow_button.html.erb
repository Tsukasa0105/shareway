<% unless current_user == user %>
  <div style="display:inline-block" class="follow_button">
    <% if current_user.following?(user) %>
      <%= form_with(model: current_user.relationships.find_by(follow_id: user.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'Unfollow', class: 'btn btn-secondary btn-block' %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.relationships.build, local: true) do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'Follow', class: 'btn btn-light btn-block' %>
      <% end %>
    <% end %>  
  </div>
<% end %>