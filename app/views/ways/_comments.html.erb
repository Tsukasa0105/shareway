<table class="table">
    <thead class="comments_thead">
    </thead>
    <% comments.each do |c| %>
      <% unless c.user.blank? %>
          <tbody class="comments_body">
            <tr>
              <th class="text-center">
                <p class="text-center"><%= render 'users/image', user: c.user %></p>
                <p class="text-center"><font size="2"><%= link_to c.user.name, user_path(c.user) %></font></p>            
              </th>
              <td>
                <div>
                  <p style="display: inline-block"><%= c.content %></p>
                  <span class="created_at"><%= c.created_at.to_s(:datetime) %>　　</span>
                </div>
              </td>
            </tr>        
          </tbody>
    <% end %>
</table>
